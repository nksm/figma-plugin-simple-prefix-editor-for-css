{
  "name": "figma-plugin-variable-code-syntax-formatter",
  "version": "1.0.0",
  "description": "A simple Figma plugin to add custom prefixes to variables as CSS custom properties",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "npm run clean",
    "build": "npm run build:ui && npm run build:code && npm run postbuild",
    "build:ui": "cross-env VITE_BUILD_TARGET=ui vite build",
    "build:code": "cross-env VITE_BUILD_TARGET=code vite build",
    "postbuild": "echo 'Build completed'",
    "clean": "rimraf dist",
    "preview": "vite preview",
    "check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,html,json}\"",
    "lint:all": "npm run lint && npm run lint:css",
    "lint:all:fix": "npm run lint:fix && npm run lint:css:fix"
  },
  "keywords": [
    "figma",
    "figma-plugin",
    "design-tokens",
    "css-variables",
    "design-system"
  ],
  "author": "Akira Nakashima",
  "license": "MIT",
  "devDependencies": {
    "@figma/plugin-typings": "^1.110.0",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.10",
    "stylelint": "^16.19.1",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-order": "^7.0.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.4",
    "vite-plugin-singlefile": "^2.2.0"
  }
}
